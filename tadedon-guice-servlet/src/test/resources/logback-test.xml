<configuration>
  <!--
    attributes you can apply to configuration node:

      debug="true" - put this attribute to see how logback is configured
      scan="true" - will scan this file for changes - useful when debugging
      scanPeriod="30 seconds" - self explaining
   --> 

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender"> 
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>


  <!-- set TRACE for debugging guice component instantiation statistics -->
  <logger name="com.google.inject.internal.util.$Stopwatch" level="INFO" />

  <!-- set TRACE for debugging bytecode generation in guice -->
  <logger name="com.google.inject.internal.BytecodeGen" level="INFO" />

  <root level="ALL">
    <appender-ref ref="CONSOLE" />
  </root>

</configuration>
